<h1>Afisare categorie</h1>
<h2>@ViewBag.Category.CategoryId</h2>
<p>Categorie: @ViewBag.Category.CategoryName</p>
<a href="/Categories/Edit/@ViewBag.Category.CategoryId">Modifica articol</a>
<form method="post" action="/Categories/Delete/@ViewBag.Category.CategoryId">
    @Html.HttpMethodOverride(HttpVerbs.Delete)
    <button type="submit">Sterge categorie</button>
</form>
<hr />
<a href="/Categories/Index">Inapoi la categorii</a>
