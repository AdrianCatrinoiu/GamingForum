@model GamingForum.Models.Category
@{
    ViewBag.Title = "Adaugare Categorie";
}
<h2>Adaugare categorie</h2>
<form method="post" action="/Categories/New">
    @Html.ValidationSummary(false, null, new { @class = "text-danger" })

    @Html.Label("CategoryName", "Nume Categorie")
    @Html.TextBox("CategoryName", null, new { @class = "form-control" })
    <br />

    <button class="btn btn-success" type="submit"><i class="glyphicon glyphicon-plus"></i> Adauga categorie</button>
</form>